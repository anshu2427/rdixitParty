         <form action="/users/addcover" enctype="multipart/form-data" method="post">
   <div class="form-group border border-info rounded-top  clearfix">
<br>  
      <label for="coverphoto"><h5>&nbsp;Cover Photo :</h5>&nbsp;(Only supports jpeg, jpg or png format.)</label>
      <input type="file" class="form-control" id="coverphoto" name="coverphoto"  placeholder="Enter Cover Photo">

      <br>  
      <label for="activeOrNot"><h5>&nbsp;Active Photo :</h5></label>
      <input type="text" class="form-control" id="activeOrNot" name="activeOrNot" placeholder="ENTER active FOR ONLY & ONLY COVER PAGE 1st IMAGE, Note: If more than 1 active image its not working">
	  
	  <br>
	  <label for="covertext"><h5>&nbsp;News &amp; Event :</h5></label>
      <textarea type="text" class="form-control" id="covertext" name="covertext" placeholder="Enter News & Event"></textarea> 
       
	  <br>
  <button type="submit" class="btn btn-primary btn-block">Submit</button>
	    </div>
